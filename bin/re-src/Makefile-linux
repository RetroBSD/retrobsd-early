CFLAGS          = -O3 -g -Wall -Werror -DDEBUG

# For Linux and Mac OS X
CFLAGS          += -DTERMIOS

all:            re

OBJ             = r.cmd.o r.edit.o r.file.o r.gettc.o r.hlam.o \
                  r.mac.o r.main.o r.tele.o r.termc.o r.ttyio.o r.wind.o

re:             $(OBJ)
		cc $(OBJ) -o $@

$(OBJ):         r.defs.h

clean:
		rm -f *.o *~ re
